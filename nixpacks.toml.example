# if you can't manually set these install, build, and start steps in your deployment provider (e.g. Coolify), you can use this custom nixpacks.toml.
# - install: `bun run install`
# - build: `bun run build`
# - start: `bun run start`


[phases.setup]
nixPkgs = ['bun']
nixpkgsArchive = 'f69ae4816bc1b501460ad2c0c63ed0cc4a9b876e'
aptPkgs = ["g++", "make", "python3"]

[phases.install]
cmds = ['bun run install']
cacheDirectories = ['/root/.npm', '/root/.bun/install/']

[phases.build]
cmds = ['bun run build']

[phases.start]
cmds = ['bun run start']
